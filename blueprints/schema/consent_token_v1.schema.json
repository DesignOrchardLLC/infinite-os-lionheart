{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lionheart Consent Token V1",
  "description": "Explicit user consent artifact required to open the Lionheart Bridge.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "__protocol": {
      "type": "string",
      "const": "LIONHEART_BRIDGE_V1"
    },
    "status": {
      "type": "string",
      "enum": ["ACTIVE", "REVOKED"]
    },
    "grantor": {
      "type": "string",
      "description": "Human witness granting consent"
    },
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "required": ["role", "write_access"],
      "properties": {
        "role": {
          "type": "string",
          "const": "ADVISORY_ONLY"
        },
        "write_access": {
          "type": "string",
          "const": "NONE"
        }
      }
    }
  },
  "required": ["__protocol", "status", "grantor", "scope"]
}
